    <!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Takibi</title>
</head>
<body>
    <h1></h1>
    
    <% 
        const now = new Date();
        const options = { 
            month: 'long', 
            day: 'numeric', 
            weekday: 'long', 
            hour: '2-digit', 
            minute: '2-digit', 
            hour12: false 
        };

        // Tarih ve saat formatını birleştir
        const formattedDate = now.toLocaleDateString('tr-TR', options) + ' ' + now.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit', hour12: false });
    %>
    
    <p class="lead"><%= formattedDate %></p>
</body>
</html>

</body>
</html>



        <!-- Yönlendirme Kartları -->
        <div class="row mt-5">
            <!-- Stok Durumu Kartı -->
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title"><b style="font-size: 25px;">Stok Durumu📦📦</b></h5>
                        <p class="card-text">Mevcut stok durumunuzu görüntüleyin.</p>
                        <a href="/stock" class="btn btn-primary">Stok Durumunu Görüntüle</a>
                    </div>
                </div>
            </div>

            <!-- Alım İşlemi Kartı -->
             
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title"><b style="font-size: 25px;">Alım İşlemi💳💳</b></h5>
                        <p class="card-text">Yeni ürünleri stoğa eklemek için alım yapın</p>
                        <a href="/purchase" class="btn btn-success">Alım Yap</a>
                    </div>
                </div>
            </div>

            <!-- Satım İşlemi Kartı -->
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title"><b style="font-size: 25px;">Satım İşlemi💵💵</b></h5>
                        <p class="card-text">Ürün satışı gerçekleştirin.</p>
                        <a href="/sale" class="btn btn-danger">Satım Yap</a>
                    </div>
                </div>
            </div>

            <!-- Ürün Ekleme Kartı -->
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title"><b style="font-size: 25px;">Ürün Ekle🍇💨</b></h5>
                        <p class="card-text">Yeni ürünleri kataloğa ekleyin</p>
                        <a href="/catalog" class="btn btn-warning">Ürün Ekle</a>
                    </div>
                </div>
            </div>


            <div class="d-flex justify-content-center align-items-center"">
                <!-- Yükseklik ayarını yapabilirsiniz -->
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <h5 class="card-title"><b style="font-size: 25px;">İşlemler/Kasa🏦🏦</b></h5>
                            <p class="card-text">Alım Satım İşlemleri ve Toplam Kasa</p>
                            <a href="/transactions" class="btn btn-info">İşlemleri Göster</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

